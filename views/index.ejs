<!-- Signup Modal -->
<div id="mySignup" class="modal styled hide fade" tabindex="-1" role="dialog" aria-labelledby="mySignupModalLabel" aria-hidden="true">
    
        <div class="modal-header">
            <div class="alert alert-danger text-center" role="alert"></div>
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
          <h4 id="mySignupModalLabel">Create an <strong>account</strong></h4>
        </div>
        <div class="modal-body">
          <form class="form-horizontal" id="createUserForm" >
              <div class="control-group">
                  <label class="control-label" for="inputEmail">Email</label>
                  <div class="controls">
                      <input type="email" id="email"  required>
                  </div>
                </div>
              <div class="control-group">
                  <label class="control-label" for="inputFirst">First Name</label>
                  <div class="controls">
                    <input type="text" id="firstname" required>
                   
                  </div>
                  
              </div>
              <div class="control-group">
                  <label class="control-label" for="inputLast">Last Name</label>
                  <div class="controls">
                    <input type="text" id="lastname" required>
                  </div>
                  
              </div>
            
            <div class="control-group">
              <label class="control-label" for="inputSignupPassword">Password</label>
              <div class="controls">
                <input type="password" id="password" required minlength="6"><br/>
                
                <span class="small-text text-center">Must be at least 6 chars</span>
              </div>
              
            </div>
            <div class="control-group">
              <label class="control-label" for="inputSignupPassword2">Confirm Password</label>
              <div class="controls">
                <input type="password" id="confirmpassword" minlength="6" required><br/>
                <span class="small-text pass-msg">Must equal password entered</span>
                <span class="small-text pass-err-msg">Passwords are not equal</span>
              </div>
              
            </div>
            <div class="control-group text-center">
              <input type="checkbox" id="public-account" checked>&nbsp;<span class="small-text">Allow pubic to see posts</span>
              
          </div>
            <div class="control-group text-center">
                <input type="checkbox" id="invalidCheck" required>&nbsp;<span class="small-text">Agree to terms and conditions</span>
                
            </div>
            <div class="control-group">
              <div class="controls text-center">
                <input type="button" class="btn btn-default" data-dismiss="modal" aria-hidden="true" value="No Thanks">&nbsp;&nbsp;<input type="submit" class="btn btn-green" value="Sign up">
                  <!-- <button type="submit" class="btn btn-success">Sign up</button> -->
                
              </div>
              <p class="aligncenter margintop20">
                  <span class="small-text">Already have an account?</span> <a href="#mySignin" data-dismiss="modal" aria-hidden="true" id="signin-open"  data-toggle="modal">Sign in</a>
              </p>
            </div>
          </form>
        </div>
      </div>
      <!-- end signup modal -->
      <!-- Sign in Modal -->
      <div id="mySignin" class="modal styled hide fade" tabindex="-1" role="dialog" aria-labelledby="mySigninModalLabel" aria-hidden="true">
        <div class="modal-header">
            <div class="alert alert-danger text-center login-alert" role="alert">Danger</div>
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
          <h4 id="mySigninModalLabel">Login to your <strong>account</strong></h4>
        </div>
        <div class="modal-body">
          <form class="form-horizontal" id="loginUserForm" >
            <div class="control-group" id="login-form">
              <label class="control-label" for="inputText">Email Address </label>
              <div class="controls">
                <input type="email"  id = "loginemail" required>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label" for="inputSigninPassword">Password</label>
              <div class="controls">
                <input type="password" id="loginpassword" minlength="6" required>
              </div>
            </div>
            <div class="control-group">
              <div class="controls text-center">
                  <button type="submit" class="btn btn-green">Sign in</button>
                
              </div>
              <p class="aligncenter margintop20">
                  Don't have an account? <a href="#mySignup" data-dismiss="modal" aria-hidden="true" id="signup-open" data-toggle="modal">Sign up</a>
                </p>
              <p class="aligncenter margintop20">
                Forgot password? <a href="#myReset" data-dismiss="modal" aria-hidden="true" data-toggle="modal">Reset</a>
              </p>
            </div>
          </form>
        </div>
      </div>
      <!-- end signin modal -->
      <!-- Reset Modal -->
      <div id="myReset" class="modal styled hide fade" tabindex="-1" role="dialog" aria-labelledby="myResetModalLabel" aria-hidden="true">
        <div class="modal-header">
