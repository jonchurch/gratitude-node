<!DOCTYPE html>
<html lang="en">

<head>
  <% include partials/head %>
</head>

<body>
  <div id="wrapper">
    
    <!-- end header -->
    <section id="inner-headline">
      <div class="container">
        <div class="row">
          <div class="span12">
            <div class="inner-heading">
                <% include partials/logo %>
              &nbsp;
            </div>
          </div>
          
      </div>
    </section>
    <section id="content">
      <div class="container">
        <div class="row">
            <div class="span3"></div>
            <div class="span6">
            <h4><strong>Login</strong></h4>
            <div class="alert alert-danger text-center alert-signup" role="alert"></div>
            <form class="form-horizontal" id="loginUserForm" >
                <div class="control-group" id="login-form">
                    <div class="controls">
                      
                      <strong>Email</strong><br/><input type="email" class="form-control custom-input-width" minlength="6" id="login-email" required>
                    
                  </div>
                  <div class="controls">
                      
                      <strong>Password</strong><br/><input type="password" class="form-control custom-input-width" minlength="6" id="login-password" required>
                    
                  </div>
                   
                    <div class="control-group">
                  <div class="controls text-center">
                      <br/>
                      <input type="submit" class="btn btn-green" id="button-signup" value="Sign in">
                      <br/><p class="aligncenter"><br/>
                  Don't have an account? <a href="/register" >Sign up</a>
                  <br/>Forgot password? <a href="/resetForm">Reset</a>
                </p>
             
               
                </div>
          </form>
            <div class="span3"></div>
          </div>
        </div>
    </section>      
    <% include partials/footer %>
  

  </div>
  <a href="#" class="scrollup"><i class="icon-chevron-up icon-square icon-32 active"></i></a>
  <% include partials/scripts %>
  <script src="/assets/js/sign-in.js"></script>

   
</body>
<% include partials/cookie-msg %>

</html>
