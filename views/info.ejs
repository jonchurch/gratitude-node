<!DOCTYPE html>
<html lang="en">

<head>
  <% include partials/head %>
</head>

<body>
  <div id="wrapper">
    
    <!-- end header -->
    <section id="inner-headline">
      <div class="container">
        <div class="row">
          <div class="span12">
            <div class="inner-heading">
                <% include partials/logo %>
              &nbsp;
            </div>
          </div>
          
      </div>
    </section>
    <section id="content">
      <div class="container">
        <div class="row">
            
          <div class="span9">
              
            <h4>Welcome to <strong>GratitudeToday.io!</strong></h4>
            <!-- id: <span id="id"></span> -->
            <form class="form-horizontal" id="updateUserInfo" >
                <input type="hidden" id="id-hidden" value=""></input>
                  <div class="control-group">
                    <div class="controls">
                                 
                                 <strong>First Name</strong><br/><input type="text" class="form-control custom-input-width" id="firstname">
                               
                             </div>
                             <br/>
                             <div class="controls">
                                 
                                 <strong>Last Name</strong><br/><input type="text" class="form-control custom-input-width" id="lastname" >
                               
                             </div>
                             <br/>
                             <div class="controls">
                      
                            <strong>Address</strong><br/><input type="text" class="form-control custom-input-width" id="location" >
                    
                  </div><br/>
                  <div class="controls">
                      <strong>Website</strong><br/><input type="url" class="form-control custom-input-width"  class="custom-input-width" id="url">
                      <!-- <strong></stron>Website</strong><input type="url" class="form-control" id="website" > -->
                    <br/><br/>
                  </div>
                      <div class="controls">
                          <strong>Tell us a little more about you</strong><textarea class="custom-input-width" rows="3" type="text" id="bio" maxlength="255"></textarea><br/>
                          No more than 255 characters. <strong><span id="chars">255</span> characters remaining.</strong>
                      </div>
                    </div>

                   <div class="alert alert-danger text-center hidden" role="alert"></div>
              <div class="alert alert-success text-center" role="alert hidden">Information updated successfully. <a href="#" id="visit-profile">Visit Profile</a></div>
                
                <div class="control-group">
                  <div class="controls">
                     
                      <input type="submit" class="btn btn-success" id ="updateUserInfo" value="Update">
                      <input type="button" class="btn btn-default" id="btn_skip" value="Skip">
                    <p>
                        Don't worry, you can do this later.
                    </p>
                  </div>
                </form>
                <div class="span3">
          </div>
         
          </div>
          
       
    </section>
    <% include partials/footer %>
  

  </div>
  
  <% include partials/scripts %>
  <script src="/assets/js/sign-in.js"></script>
  <script src="/assets/js/jquery-custom.js"></script>
 

  <script>
  $(document).ready(function() {
    getUserInfo('info');
  });  
  </script>
 
</body>
<% include partials/cookie-msg %>

