<!DOCTYPE html>
<html lang="en">

<head>
 <% include partials/head %>
</head>

<body>
  <div id="wrapper">
    
    
    <section id="inner-headline">
      <div class="container">
        <div class="row">
          <div class="span12">
              <% include partials/logo %>
          </div>
          
        </div>
      </div>
    </section>
    <section id="content" style="background-color: #ffcccc;">
      <div class="container">
        <div class="row">
             <div class="span3">
               
                
            <aside class="right-sidebar">
                <div class="widget">
                <div></div>
                <h5 class="widgetheading" style="padding-top:30px;font-size:1rem;font-weight:600;" id="name"></h5>
                <% include partials/profile-dropdown %>
                
                <span id="Avatar" style="padding-top:20px;"><img id="avatar-img" src="/assets/img/avatar.png" style="padding-bottom: 10px;"></span><br/>
                
                <span id="email"></span><br/>
                <span id="url"></span><br/>
                <span id="location"></span><br/>
                Joined: <span id="reg-date"></span>
                </div>
               
               
              <div class="widget">
                <h5 class="widgetheading">About</h5>
                <p id="bio">
                  
                </p>
              </div>
            </aside>
          </div>
          <div class="span1" style="background-color:#e6ecf0"></div>
          <div class="span8" style="background-color:aliceblue;padding-left:20px;">
            <article>
              <div class="top-wrapper">
                <div class="post-heading">
                    <br/><br/><br/><br/>
                  <form class="form-horizontal" id="updateProfile">
                        
                        <input type="hidden" id="id-hidden" value=""></input>
                           <div class="controls">
                                 
                                 <strong>Password</strong><br/> 
                                 <input type="password" class="form-control custom-input-width" id="password" readonly >
                               
                             </div>
                             <br/>
                           <div class="controls">
                                 
                                 <strong>Confirm Password</strong><br/><input type="text" class="form-control custom-input-width" id="confirmpassword" >
                               
                             </div>
                             <br/>
                             
                           <div class="control-group">
                             <div class="controls">
                                <br/>
                                <input type="submit" class="btn btn-success" id ="updateProfile" value="Save Changes">
                             
                              <input type="submit" class="btn btn-default" id="btn-cancel" value="Cancel">
                              
                             </div>
                           </form>
                    
                   
                </div>
               
              </div>

              <div id="recent-posts-list">
               
            </div>
            </article>
          </div>
         
        </div>
      </div>
    </section>
 <% include partials/footer %>
  </div>
  
  <% include partials/scripts %>
  <script src="/assets/js/sign-in.js"></script>
  <script src="/assets/js/postFunctions.js"></script>
  <script src="/assets/js/jquery-custom.js"></script>

  <script>
